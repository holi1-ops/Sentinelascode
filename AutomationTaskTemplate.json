{
    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "$connections": {
            "defaultValue": {},
            "type": "Object"
        }
    },
    "triggers": {
        "When_Azure_Sentinel_incident_creation_rule_was_triggered": {
            "type": "ApiConnectionWebhook",
            "inputs": {
                "body": {
                    "callback_url": "@{listCallbackUrl()}"
                },
                "host": {
                    "connection": {
                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                    }
                },
                "path": "/incident-creation"
            }
        }
    },
    "actions": {
        "Send_an_email_(V2)": {
            "runAfter": {},
            "type": "ApiConnection",
            "inputs": {
                "body": {
                    "Body": "<p>There's an incident created in Sentinel. <br>\n<br>\nIncident Title @{triggerBody()?['object']?['properties']?['title']}<br>\nSeverity @{triggerBody()?['object']?['properties']?['severity']}<br>\nDescription @{triggerBody()?['object']?['properties']?['description']}<br>\nTime@{triggerBody()?['object']?['properties']?['createdTimeUtc']}</p>",
                    "Subject": "Sentinel incident @{triggerBody()?['object']?['id']}created",
                    "To": "holi1@microsoft.com"
                },
                "host": {
                    "connection": {
                        "name": "@parameters('$connections')['office365']['connectionId']"
                    }
                },
                "method": "post",
                "path": "/v2/Mail"
            }
        }
    },
    "outputs": {},
    "connections": {
        "azuresentinel": {
            "id": "/subscriptions/0000-0000/providers/Microsoft.Web/locations/southeastasia/managedApis/azuresentinel",
            "connectionId": "",
            "connectionName": ""
        },
        "office365": {
            "id": "/subscriptions/0000-0000/providers/Microsoft.Web/locations/southeastasia/managedApis/office365",
            "connectionId": "",
            "connectionName": ""
        }
    }
}
